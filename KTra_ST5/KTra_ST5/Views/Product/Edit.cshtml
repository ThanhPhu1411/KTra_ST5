@model KTra_ST5.Models.Product

<div class="container mt-5">

    <div class="card shadow-lg p-4 rounded-4" style="max-width: 700px; margin: auto;">

        <h2 class="text-center fw-bold text-warning mb-4">✏ Sửa sản phẩm</h2>

        <form method="post">

            <div class="mb-3">
                <label class="form-label fw-semibold">ID</label>
                <input class="form-control rounded-3" value="@Model.Id" disabled />
                <input type="hidden" name="Id" value="@Model.Id" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Tên sản phẩm</label>
                <input type="text" name="Name" class="form-control rounded-3" value="@Model.Name" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Giá</label>
                <input type="number" name="Price" class="form-control rounded-3" value="@Model.Price" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Hình ảnh (tên file)</label>
                <input type="text" name="Image" class="form-control rounded-3" value="@Model.Image" />

                <div class="mt-3 text-center">
                    <p class="fw-semibold">Ảnh hiện tại:</p>
                    <img src="/images/@Model.Image" class="rounded-3 shadow-sm" width="160" />
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-primary px-4">✔ Cập nhật</button>
                <a href="/Product/Index" class="btn btn-secondary px-4">← Quay lại</a>
            </div>

        </form>

    </div>

</div>
