@model List<KTra_ST5.Models.Product>

<div class="container mt-4">
    <h2 class="mb-3">Danh sách sản phẩm</h2>

    <a class="btn btn-primary mb-3" href="/Product/Create">Thêm sản phẩm</a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>
                        <img src="/images/@item.Image" width="80" />
                    </td>
                    <td>
                        <a href="/Product/Edit/@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a href="/Product/Delete/@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
